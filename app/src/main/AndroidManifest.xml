<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mark.passwordlocker" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_boobs"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <meta-data
            android:name="AA_DB_NAME"
            android:value="PasswordLocker.db" />

        <activity
            android:name=".activities.PLMainActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop" >

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.MyPreferenceActivity"
            android:label="@string/app_name"
            android:parentActivityName=".activities.PLMainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.mark.passwordlocker.activities.PLMainActivity" />
        </activity>
        <service android:name=".services.MyService"/>
    </application>

</manifest>
