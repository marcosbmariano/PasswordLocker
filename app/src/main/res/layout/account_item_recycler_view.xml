<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cvRoot"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"
    android:layout_marginTop="4dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    card_view:cardElevation="8dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/tvAccount"
            android:layout_alignBottom="@+id/imBtnCopyClipboardPassword"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="25dp" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Button"
            android:src="@drawable/ic_add"
            android:id="@+id/imBtnCopyClipboardPassword"
            android:layout_gravity="center_horizontal"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/imBtnViewPassword"
            android:layout_toStartOf="@+id/imBtnViewPassword"
            android:layout_marginRight="19dp"
            android:layout_marginEnd="19dp" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Button"
            android:src="@drawable/ic_add"
            android:id="@+id/imBtnViewPassword"
            android:layout_gravity="right"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="29dp"
            android:layout_marginEnd="29dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/tvPassword"
            android:layout_below="@+id/imBtnCopyClipboardPassword"
            android:layout_alignRight="@+id/imBtnCopyClipboardPassword"
            android:layout_alignEnd="@+id/imBtnCopyClipboardPassword"
            android:layout_marginRight="54dp"
            android:layout_marginEnd="54dp" />

    </RelativeLayout>

</android.support.v7.widget.CardView>